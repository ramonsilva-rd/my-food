<h2 class='title is-2'>Editar <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: 'label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'control' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Aguardando confirmação: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, class: 'label' %> <i>(deixe em branco caso não queira atualizar)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'control' %>
    <% if @minimum_password_length %>
      <br />
      <em>Mínimo de <%= @minimum_password_length %> caracteres</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: 'label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'control' %>
  </div>

  <div class="field">
    <%= f.label :current_password, class: 'label' %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'control' %>
  </div>

  <div class="actions">
    <%= f.submit "Atualizar", class='button is-primary' %>
  </div>
<% end %>

<h3>Cancelar minha conta</h3>

<p>Infeliz? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Tem certeza?" }, method: :delete %></p>

<%= link_to "Voltar", :back %>
