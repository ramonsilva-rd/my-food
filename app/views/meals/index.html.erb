<% if notice %>
  <div class="notification is-success is-light">
    <%= notice %>
  </div>
<% end %>

<h1>Pratos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Preço</th>
      <th>Categoria</th>
      <th>Restaurante</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.description %></td>
        <td><%= meal.price %></td>
        <td><%= meal.category.name %></td>
        <td><%= meal.restaurant.name %></td>
        <td><%= link_to 'Editar', edit_meal_path(meal), class: 'button is-link' %></td>
        <td><%= link_to 'Excluir', meal, method: :delete, class: 'button is-danger', data: { confirm: 'Tem certeza que quer excluir?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Adicionar prato', new_meal_path, class: 'button is-link' %>
